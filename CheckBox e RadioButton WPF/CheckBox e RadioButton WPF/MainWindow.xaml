<Window x:Class="CheckBox_e_RadioButton_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CheckBox_e_RadioButton_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="grid">
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>
        <RadioButton x:Name="radioButton11" Grid.Column="1" Content="RadioButton11" HorizontalAlignment="Center" Margin="4,4,4,4" Grid.Row="3" VerticalAlignment="Center" GroupName="Grupo1" Checked="radioButton11_Checked" Unchecked="radioButton11_Unchecked"/>
        <RadioButton x:Name="radioButton12" Grid.Column="1" Content="RadioButton12" Margin="4,4,4,4" Grid.Row="4" VerticalAlignment="Center" HorizontalAlignment="Center" GroupName="Grupo1" Checked="radioButton12_Checked" Unchecked="radioButton12_Unchecked"/>
        <RadioButton x:Name="radioButton13" Grid.Column="1" Content="RadioButton13" HorizontalAlignment="Center" Margin="4,4,4,4" Grid.Row="5" VerticalAlignment="Center" GroupName="Grupo1" Checked="radioButton13_Checked" Unchecked="radioButton13_Unchecked"/>
        <RadioButton x:Name="radioButton14" Grid.Column="1" Content="RadioButton14" HorizontalAlignment="Center" Margin="4,4,4,4" Grid.Row="6" VerticalAlignment="Center" GroupName="Grupo1" Checked="radioButton14_Checked" Unchecked="radioButton14_Unchecked"/>
        <CheckBox x:Name="checkBox1" Grid.Column="4" Content="CheckBox1" HorizontalAlignment="Center" Margin="4,4,4,4" Grid.Row="3" VerticalAlignment="Center" Checked="checkBox1_Checked" Unchecked="checkBox1_Unchecked"/>
        <CheckBox x:Name="checkBox2" Grid.Column="4" Content="CheckBox2" HorizontalAlignment="Center" Margin="4,4,4,4" Grid.Row="4" VerticalAlignment="Center" Checked="checkBox2_Checked" Unchecked="checkBox2_Unchecked"/>
        <CheckBox x:Name="checkBox3" Grid.Column="4" Content="CheckBox3" HorizontalAlignment="Center" Margin="4,4,4,4" Grid.Row="5" VerticalAlignment="Center"/>
        <CheckBox x:Name="checkBox4" Grid.Column="4" Content="CheckBox4" HorizontalAlignment="Center" Margin="4,4,4,4" Grid.Row="6" VerticalAlignment="Center"/>
        <RadioButton x:Name="radioButton21" Grid.Column="2" Content="RadioButton21" HorizontalAlignment="Center" Margin="4,4,4,4" Grid.Row="3" VerticalAlignment="Center" GroupName="Grupo2"/>
        <RadioButton x:Name="radioButton22" Grid.Column="2" Content="RadioButton22" HorizontalAlignment="Center" Margin="4,4,4,4" Grid.Row="4" VerticalAlignment="Center" GroupName="Grupo2"/>
        <RadioButton x:Name="radioButton23" Grid.Column="2" Content="RadioButton23" HorizontalAlignment="Center" Grid.Row="5" VerticalAlignment="Center" Margin="4,4,4,4" GroupName="Grupo2"/>
        <RadioButton x:Name="radioButton24" Grid.Column="2" Content="RadioButton24" HorizontalAlignment="Center" Margin="4,4,4,4" Grid.Row="6" VerticalAlignment="Center" GroupName="Grupo2"/>
        <Button x:Name="button" Grid.Column="1" Content="Button" Margin="4,4,4,4" Grid.Row="7" Click="button_Click"/>
        <Button x:Name="button1" Grid.Column="4" Content="Button" Margin="4,4,4,4" Grid.Row="7" Click="button1_Click"/>

    </Grid>
</Window>
